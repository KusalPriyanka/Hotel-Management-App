<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MM_Main_Meal_View_PU"
android:background="#02081D">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/mm_ic_room_service_black_24dp"


                />

            <TextView
                android:id="@+id/mealName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="#fff"
                android:textSize="20dp"

                android:textStyle="bold|italic" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/mm_ic_play_arrow_black_24dp"


                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="#fff"
                android:textSize="17dp"
                android:text="@string/available_times"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/txt3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="#FCF158"
                android:textSize="17dp"

                />

            <ImageView

                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@drawable/mm_rectangle_shape"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="#FCF158"
                android:textSize="17dp"


                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/mm_ic_play_arrow_black_24dp"


                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="#fff"

                android:textSize="17dp"
                android:text="@string/food_type"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/foodType"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="#FCF158"
                android:textSize="17dp"

                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                    android:src="@drawable/mm_ic_play_arrow_black_24dp"


                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="#fff"
                android:textSize="17dp"
                android:text="@string/price"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/regular"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="#FCF158"
                android:textSize="17dp"
                android:text="@string/regular"
                />

            <TextView
                android:id="@+id/regularPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FF0E00"
                android:textSize="17dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/Large"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="#FCF158"
                android:textSize="17dp"
                android:text="@string/large"
                />
            <TextView
                android:id="@+id/largePrice"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="#FFFF0E00"
                android:textSize="17dp"
                android:text="350.00/-"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="#fff"
                android:textSize="17dp"
                android:text="@string/end"
                />
        </LinearLayout>



    </LinearLayout>

</ScrollView>



</LinearLayout>