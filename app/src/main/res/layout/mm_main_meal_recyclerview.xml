<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"

    >


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_margin="2dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center"



        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"




            >
            <!--Image-->
            <LinearLayout
                android:id="@+id/imageBack"
                android:orientation="horizontal"

                android:layout_width="130dp"
                android:layout_height="120dp"

                >
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />


            </LinearLayout>

            <!--Text Area-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="6dp"
                        android:src="@drawable/mm_ic_room_service_black_24dp"

                        />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="200dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="6dp"
                        android:textColor="#252424"
                        android:textSize="15dp"
                        android:text="@string/chinese_special_noodles"
                        android:textStyle="bold|italic" />


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/mm_rectangle_shape" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >


                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="19dp"

                        android:layout_gravity="center"

                        android:layout_marginTop="14dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="13dp"
                        android:src="@drawable/mm_ic_access_time_black_24dp"

                        />

                    <CheckedTextView
                        android:id="@+id/brakfast"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="@string/breakfast"
                        android:textColor="#000000"
                        android:layout_marginTop="14dp"
                        android:textSize="8dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        />
                    <ImageView

                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@drawable/mm_rectangle_shape"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        />
                    <CheckedTextView
                        android:id="@+id/lunch"
                        android:layout_width="36dp"
                        android:layout_height="20dp"
                        android:text="@string/lunch"
                        android:textColor="#000000"
                        android:layout_marginTop="14dp"
                        android:textSize="8dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        />
                    <ImageView

                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="@drawable/mm_rectangle_shape"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="8dp"
                        />

                    <CheckedTextView
                        android:id="@+id/dinner"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:text="@string/dinner"
                        android:textColor="#000000"
                        android:layout_marginTop="14dp"
                        android:textSize="8dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"

                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/pa"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/mm_rectangle_shape" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="@string/_299_99"
                        android:textColor="#FF0000"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="16dp"
                        android:textSize="15dp"
                        android:textStyle="bold|italic"
                        android:gravity="right"
                        />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>





</LinearLayout>

